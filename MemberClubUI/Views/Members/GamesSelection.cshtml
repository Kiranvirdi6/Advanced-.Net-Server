@using MemberClubUI.Models;
@model MemberGamesSelectionVM

@{
    ViewBag.Title = "GamesSelection";
}

<h2>Member Games Selection</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(Model=>Model.Member.Id)

    <b>@Html.DisplayNameFor(model => model.Member.FirstName)</b>
    @Html.DisplayFor(Model => Model.Member.FirstName)

    <b>@Html.DisplayNameFor(model => model.Member.LastName)</b>
    @Html.DisplayFor(Model => Model.Member.LastName)

    <h3></h3>
    for (int i = 0; i < Model.SelectableGames.Count; i++)
    {
        @Html.HiddenFor(Model => Model.SelectableGames[i].Id);
        @Html.EditorFor(Model => Model.SelectableGames[i].isSelected);
        @Html.DisplayFor(Model=>Model.SelectableGames[i].Title)

    }
    <input type="submit" value="Update">

}
